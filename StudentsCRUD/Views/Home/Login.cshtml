@model  StudentsCRUD.Models.LoginViewModel.LoginViewModel
@{

    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h1 style="font-family:Oregano; text-align:center; font-size:5em;">Login</h1>
    <div class="row">
        <div class="col-lg-12">
            <div style="width:400px; height:250px; position:relative; left:35%; padding-top:5%;">
                <form action="/Home/Login" method="post">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, "Username", new { @class = "control-label col-md-12", @style = "color: #333; font-size:15px; margin-left: 10em; padding-top:15px;" })


                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control col-md-offset-2" })
                        <div style="margin:10px; margin-left:13em; margin-top:1em; font-size:11px;">
                            @Html.ValidationMessageFor(model => model.Username)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, "Password", new { @class = "control-label col-md-12", @style = "color: #333; font-size:15px; margin-left: 10em; margin-top:10px;" })
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control col-md-offset-2" })

                        <div style=" margin-top:10px; margin-left:11em; font-size:11px;">
                            @Html.ValidationMessageFor(model => model.Password)
                            @Html.ValidationMessage("Failed Login")
                        </div>
                    </div>

                    <div class="col-md-offset-2 col-md-10" style="margin:1em; margin-left:11em;">
                        <input type="submit" value="Login" class="btn-success" style="border-radius:15px; background-color:#333; border-color:#333; color:white; height:2.5em; width:5em;" />

                    </div>
                    <br />
                </form>
            </div>
        </div>
    </div>
</body>
</html>